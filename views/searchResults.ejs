<%- include('partials/header'); -%>

<div class="container">
    <form class="col-lg-6 offset-lg-3"  action="/search" method="POST">
        <input class="form-control mb-2 mr-sm-2" name="foodName" type="search" placeholder="Search Any Recipe">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>    
</div>


<div class="row container-fluid">
    <% recipeDatas.forEach(recipeData => { %>
    <div class="col-md-6 col-lg-4">
        <div class="card mb-4 shadow-sm">
            <img src=<%= recipeData.recipe.image %> class="card-img-top" alt=<%= recipeData.recipe.label %> >
            <div class="card-body">
                <p class="card-text"><%= recipeData.recipe.label %></p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a href="/search/<%= recipeData.recipe.label %>"  class="btn btn-sm btn-outline-secondary">View</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% }) %>
  </div>


<%- include('partials/footer'); -%>